-- Schema tables
create table words(
	id int NOT NULL AUTO_INCREMENT primary key,
	category int,
	word text not null,
	eqiv text not null,
	defn text,
	exmp text,
	crtd timestamp not null default current_timestamp
);
create unique index uq_words_values on words (word(128), eqiv(128));
create index idx_words_word on words (word(512));
create index idx_words_eqiv on words (eqiv(512));
create table categories(
	id int NOT NULL AUTO_INCREMENT primary key,
	category text not null,
	crtd timestamp not null default current_timestamp
)
create unique index uq_categories_values on categories(category(512));